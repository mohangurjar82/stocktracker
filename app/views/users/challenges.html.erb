<div class="window-height">
	<%= render 'layouts/navigation'  %>
	<div class="container">
		<div class="row">
			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="3" class="page-header">
							<h2>Challenges</h2>
						</th>
					</tr>
					<tr>				
						<th>S.no</th>
						<th>Name</th>
						<th>Date</th>
						<th>Result</th>
					</tr>
					<% @challenges.each_with_index do |challenge,i| %>
						<tr>
							<td><%= i+1 %></td>
							<td><%= challenge.user.full_name %></td>
							<td><%= challenge.created_at.strftime("%d/%m/%Y") %></td>
							<td><%= link_to "Result", challenges_result_path(challenge.id), class:"btn btn-info btn-xs" %></td>
						</tr>
					<% end %>
				</thead>
				<tbody>

				</tbody>
			</table>
		</div>
	</div>
</div>